{% extends 'base.html.twig' %}

{% block title %}Hello PizzaController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Liste des pizzas</h1>

    <div>
        <a href="{{ path("pizza_create") }}">Créer une nouvelle pizza</a>
    </div>

    <div>
        {% for unit in data %}
            <div>
                <p>
                    La pizza {{ unit.pizza.name }} est à {{ unit.pizza.price }}€
                </p>
                <div>
                    <a href="{{ path('pizza_update', { id: unit.pizza.id }) }}">Modifier cette pizza</a>
                </div>
                <div>
                    {{ 
                        form(unit.deleteForm, {
                            action: path('pizza_delete', { id: unit.pizza.id })
                        })
                    }}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
